#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Hidden action previous button color when pressed
<ActionPreviousButton>:
    background_down: ""
    background_color: '#00000000'

# Settings stuff
<SettingsScreen>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Screen float layout
    FloatLayout:

        # ID 
        id: floatlayout

        # App action bar
        ActionBar:

            # Size & Position
            pos_hint: {'top':1}
            size_hint: (1, None)
            height: 60

            # Style
            background_image: root.background

            # Action View
            ActionView:

                # Separator
                use_separator: True

                # Action Previous
                ActionPrevious:
                    title: f"[b][color=#000000][font={root.font}]Settings[/font][/color][/b]"
                    with_previous: False
                    markup: True
                    app_icon: 'no_icon'
                    app_icon_width: 0
                    app_icon_height: 0

                # Action overflow
                ActionOverflow:

                # Servers button
                ActionButton:
                    icon: "Sources/Assets/download96.png"
                    important: True
                    background_color: "00000022"
                    text: "Get server"

                    # Action
                    on_press:
                        root.get_server(IP_address, Port)

                    
                # Help button
                ActionButton:
                    icon: "Sources/Assets/save96.png"
                    important: True
                    background_color: "00000022"
                    text: "Save"

                    # Action
                    on_press:
                        root.save_config(CloudFlare, IP_address, Port, UUID_input, Remark, Pathvmess, Pathvless)

                # Back button
                ActionButton:
                    icon: "Sources/Assets/back96.png"
                    important: True
                    background_color: "00000022"
                    text: "Back"

                    # Action
                    on_press:
                        root.manager.transition = FadeTransition(duration=0.05)
                        root.manager.current = 'MainMenu'


        # Grid layout
        GridLayout:

            # Size & Position
            cols: 1
            row_force_default: True
            row_default_height: "40dp"
            size_hint: (0.7, 0.7)
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            background_color: "000000"

            # Proxy config label
            Label:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Proxy Config[/b]"
                color: "000000"

            # CloudFlare worker input
            TextInput:

                # ID
                id: CloudFlare
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True

                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter CloudFlare Worker URL"
                text: ""

            # IP address input
            TextInput:
                
                # ID
                id: IP_address
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter IP address"
                text: ""
            
            # Port number input
            TextInput:
                
                # ID
                id: Port
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter Port number"
                text: ""
            
            # UUID input
            TextInput:
                
                # ID
                id: UUID_input
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter UUID"
                text: ""
            
            # Remark input
            TextInput:
                
                # ID
                id: Remark
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter Proxy Remarks"
                text: ""
            
            # Path input
            TextInput:
                
                # ID
                id: Pathvmess
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter Vmess Path"
                text: ""

            
            # Path input
            TextInput:
                
                # ID
                id: Pathvless
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True

                # Style
                foreground_color: "000000"
                background_color: "#ffffffee"
                hint_text: "Enter Vless Path"
                text: ""
                
            
            # New line - Empty label
            Label:
                text:""

            # generate uuid
            Button:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Generate the UUID[/b]"
                color: "ffffff"
                background_color: "000000"
                
                # Action
                on_press:
                    root.generate_uuid(UUID_input)

            # generate Path
            Button:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Generate the Path[/b]"
                color: "ffffff"
                background_color: "000000"
                
                # Action
                on_press:
                    root.generate_path(Pathvmess, Pathvless)

            # Reset
            Button:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Reset the  Configs[/b]"
                color: "ff0000"
                background_color: "000000"
                
                # Action
                on_press:
                    root.reset_settings(CloudFlare, IP_address, Port, UUID_input, Remark, Pathvmess, Pathvless)

        # V2Paste label
        Label:

            size_hint: {1, 0.1}
            pos_hint: {"center_x":0.5, "center_y":0.05}

            # Style
            markup: True
            font_name: "Sources/Assets/header.ttf"
            text: "[b][ref=Reset]V2Paste v1.3[/color][/ref][/b]"
            color: "000000"
                
            # Action
            on_ref_press:
                root.do_game()    

# EOF
