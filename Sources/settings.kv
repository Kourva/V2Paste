#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Hidden action previous button color when pressed
<ActionPreviousButton>:
    background_down: ""
    background_color: '#00000000'

# Settings stuff
<SettingsScreen>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Screen float layout
    FloatLayout:

        # ID 
        id: floatlayout

        # App action bar
        ActionBar:

            # Size & Position
            pos_hint: {'top':1}
            size_hint: (1, None)
            height: 60

            # Style
            background_image: root.background
            canvas.before:
                Color:
                    rgba: .168, .210, .162, 1

                Line:
                    width: 3
                    rectangle: self.x, self.y, self.width, self.height

            # Action View
            ActionView:

                # Separator
                use_separator: True
                

                # Action Previous
                ActionPrevious:
                    title: f"[b][color=#a8d2a2][font={root.font}]Settings[/font][/color][/b]"
                    with_previous: True
                    markup: True
                    app_icon: ''
                    app_icon_width: 0
                    app_icon_height: 0
                    previous_image: 'Sources/Assets/back96.png'

                    on_release:
                        root.manager.transition = FadeTransition(duration=0.05)
                        root.manager.current = 'MainMenu'



                # Action overflow
                ActionOverflow:

                # Servers button
                ActionButton:
                    icon: "Sources/Assets/download96.png"
                    important: True
                    background_color: "00000022"
                    text: "Get server"

                    # Action
                    on_press:
                        root.get_server(IP_address, Port)

                    
                # Help button
                ActionButton:
                    icon: "Sources/Assets/save96.png"
                    important: True
                    background_color: "00000022"
                    text: "Save"

                    # Action
                    on_press:
                        root.save_config(CloudFlare, IP_address, Port, UUID_input, Remark, Pathvmess, Pathvless)
                        


        # Grid layout
        GridLayout:

            # Size & Position
            cols: 1
            row_force_default: True
            row_default_height: "40dp"
            size_hint: (0.7, 0.7)
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            background_color: "000000"

            # Proxy config label
            Button:

                # Size & Positions
                size_hint: (1, None)
                height: "33dp"

                # Style
                markup: True
                disabled: True
                font_name: root.font
                text: "[b][color=#000000]Proxy Config[/b]"
                background_normal: ''
                background_disabled_normal: ''
                background_color: "f3c808"
                canvas:
                    Color:
                        rgba: .243, .200, .008, 0.7
                    Line:
                        width: 2.5
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 3, 3, \
                            self.height \
                            )

            # CloudFlare worker input
            TextInput:

                # ID
                id: CloudFlare
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True

                # Style
                foreground_color: "ffffff"
                hint_text: "Enter CloudFlare Worker URL"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1


            # IP address input
            TextInput:
                
                # ID
                id: IP_address
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                hint_text: "Enter IP address"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1
            
            # Port number input
            TextInput:
                
                # ID
                id: Port
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                hint_text: "Enter Port number"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1
            
            # UUID input
            TextInput:
                
                # ID
                id: UUID_input
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                hint_text: "Enter UUID"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1
            
            # Remark input
            TextInput:
                
                # ID
                id: Remark
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                hint_text: "Enter Proxy Remarks"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1
            
            # Path input
            TextInput:
                
                # ID
                id: Pathvmess
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True
                
                # Style
                foreground_color: "000000"
                hint_text: "Enter Vmess Path"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1

            
            # Path input
            TextInput:
                
                # ID
                id: Pathvless
                
                # Size & Positions
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                keyboard_suggestions: True

                # Style
                foreground_color: "000000"
                hint_text: "Enter Vless Path"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1
                
            
            # New line - Empty label
            Label:
                text:""

            # generate uuid
            Button:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Generate the UUID[/b]"
                color: "a8d2a2"
                background_normal: ''
                background_color: "a8d2a200"
                canvas:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            15, 15, 3, 3, \
                            self.height \
                            )
                
                # Action
                on_press:
                    root.generate_uuid(UUID_input)

            # generate Path
            Button:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Generate the Path[/b]"
                color: "a8d2a2"
                background_normal: ''
                background_color: "a8d2a200"
                canvas:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            3, 3, 15, 15, \
                            self.height \
                            )
                
                # Action
                on_press:
                    root.generate_path(Pathvmess, Pathvless)

            # Reset
            Button:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Reset the  Configs[/b]"
                color: "aa0000"
                background_normal: ''
                background_color: "ee000000"
                
                # Action
                on_press:
                    root.reset_settings(CloudFlare, IP_address, Port, UUID_input, Remark, Pathvmess, Pathvless)

        # V2Paste label
        Label:

            size_hint: {1, 0.1}
            pos_hint: {"center_x":0.5, "center_y":0.05}

            # Style
            markup: True
            font_name: "Sources/Assets/header.ttf"
            text: "[b][ref=Reset]V2Paste v2.0[/color][/ref][/b]"
            color: "a8d2a2"
                
            # Action
            on_ref_press:
                root.do_game()    

# EOF
