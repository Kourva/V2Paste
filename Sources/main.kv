#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Hidden action previous button color when pressed
<ActionPreviousButton>:
    background_down: ""
    background_color: '#00000000'

# Main menu stuff
<MainMenuScreen>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Screen float layout
    FloatLayout:

        # ID 
        id: floatlayout

        # App action bar
        ActionBar:

            # Size & Position
            pos_hint: {'top':1}
            size_hint: (1, None)
            height: 60

            # Style
            background_image: root.background
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1

                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height


            # Action View
            ActionView:

                # Separator
                use_separator: False

                # Action Previous
                ActionPrevious:
                    title: f"[b][color=#000000][font={root.font}]V2Paste[/font][/color][/b]"
                    with_previous: False
                    markup: True
                    app_icon: 'no_icon'
                    app_icon_width: 0
                    app_icon_height: 0

                # Action overflow
                ActionOverflow:

                # Decode button
                ActionButton:
                    icon: "Sources/Assets/decode96.png"
                    important: True
                    background_color: "00000000"
                    background_normal: ''
                    text: "Decode Vmess"

                    # Action
                    on_press:
                        root.manager.transition = FadeTransition(duration=0.05)
                        root.manager.current = 'DecodeMenu'  

                # Settings button
                ActionButton:
                    icon: "Sources/Assets/settings96.png"
                    important: True
                    background_color: "00000000"
                    background_normal: ''
                    text: "Settings"

                    # Action
                    on_press:
                        root.load_config()
                        root.manager.transition = FadeTransition(duration=0.05)
                        root.manager.current = 'Settings'

                # Exit button
                ActionButton:
                    icon: "Sources/Assets/close96.png"
                    important: True
                    background_color: "00000000"
                    background_normal: ''

                    text: "Exit"

                    # Action
                    on_press:
                        root.exit_app()

        # Grid layout
        GridLayout:

            # Size & Positions
            cols: 1
            row_force_default: True
            row_default_height: "40dp"
            size_hint: (0.7, 0.7)
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            background_color: "000000"
            background_normal: ''

            # Generate button label
            Label:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Generate Vless/Vmess proxies[/b]"
                color: "#000000" 
                background_normal: ''


            # Generate button
            Button:

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Generate  2 proxies"
                color: "ffffff"
                background_color: "#111111"
                background_normal: ''

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1

                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                # Action
                on_press:
                    root.generate(output)


            # Generate 20 button
            Button:

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Generate 20 Proxies"
                color: "00ff00"
                background_color: "#111111"
                background_normal: ''

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1

                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                # Action
                on_press:
                    root.generate_20(output)

            # New line - Empty label
            Label:
                text:""

            # New line - Empty label
            Label:
                text:""

            # New line - Empty label
            Label:
                text:""

            # New line - Empty label
            Label:
                text:""

            # New line - Empty label
            Label:
                text:""

            # Output box for Vless
            TextInput:

                # ID
                id: output

                # Size & Position
                size_hint: (0.4, None)
                height: "200dp"

                # Style
                markup: True
                font_name: root.font
                text: ""
                hint_text: "Output of created proxies...\n\nFirst go to settings and setup the config.\n\nPress code icon below to get help for config section"
                hint_text_color: "000000"
                background_color: "#00000022"
                background_normal: ''


            
            # Copy button for Vmess
            Button:

                # ID
                id: copybutton

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Copy to clipboard"
                color: "ffffff"
                background_color: "#111111"
                background_normal: ''

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1

                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                # Action
                on_press:
                    root.copy_output(output)

            # Copy button for Vmess
            Button:

                # ID
                id: copybutton

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Reset the Output"
                color: "ff0000"
                background_color: "#111111"
                background_normal: ''

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1

                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                # Action
                on_press:
                    root.reset_output(output)

            # New line - Empty label
            Label:
                text:""




            # Copy button for Vmess
            Button:

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Clone the Proxy"
                color: "00ff00"
                background_color: "#111111"
                background_normal: ''

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1

                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                # Action
                on_press:
                    root.manager.transition = FadeTransition(duration=0.05)
                    root.manager.current = 'CloneMenu'

        # GitHub button
        ImageButton:
 
            # Size & Position
            size_hint: (0.1, 0.1)
            pos_hint: {"bottom": 1, "center_x": 0.4}
 
            # Style
            source: "Sources/Assets/github96.png"

            # Action
            on_press:
                root.open_github()

        # Telegram button
        ImageButton:
 
            # Size & Position
            size_hint: (0.1, 0.1)
            pos_hint: {"bottom": 1, "center_x": 0.5}
 
            # Style
            source: "Sources/Assets/telegram96.png"

            # Action
            on_press:
                root.open_telegram()

        # Telegram button
        ImageButton:
 
            # Size & Position
            size_hint: (0.1, 0.1)
            pos_hint: {"bottom": 1, "center_x": 0.6}
 
            # Style
            source: "Sources/Assets/code96.png"

            # Action
            on_press:
                root.open_source()


# EOF
