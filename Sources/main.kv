#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Hidden action previous button color when pressed
<ActionPreviousButton>:
    background_down: ""
    background_color: '#00000000'

# Main menu stuff
<MainMenuScreen>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Screen float layout
    FloatLayout:

        # ID 
        id: floatlayout

        # App action bar
        ActionBar:

            # Size & Position
            pos_hint: {'top':1}
            size_hint: (1, None)
            height: 60

            # Style
            background_image: "Sources/Assets/white.jpg"

            # Action View
            ActionView:

                # Separator
                use_separator: False

                # Action Previous
                ActionPrevious:
                    title: f"[b][color=#000000][font={root.font}]V2Paste[/font][/color][/b]"
                    with_previous: False
                    markup: True
                    app_icon: ''
                    app_icon_width: 0
                    app_icon_height: 0

                # Action overflow
                ActionOverflow:

                # Script button
                ActionButton:
                    icon: "Sources/Assets/code96.png"
                    important: True
                    background_color: "00000022"
                    text: "Script"

                    # Action
                    on_press:
                        root.notify_next_update()
                    
                # Settings button
                ActionButton:
                    icon: "Sources/Assets/settings96.png"
                    important: True
                    background_color: "00000022"
                    text: "Settings"

                    # Action
                    on_press:
                        root.load_config()
                        root.manager.transition = FadeTransition(duration=0.05)
                        root.manager.current = 'Settings'

                # Exit button
                ActionButton:
                    icon: "Sources/Assets/close96.png"
                    important: True
                    background_color: "00000022"
                    text: "Exit"

                    # Action
                    on_press:
                        root.exit_app()

        # Grid layout
        GridLayout:

            # Size & Positions
            cols: 1
            row_force_default: True
            row_default_height: "40dp"
            size_hint: (0.7, 0.7)
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            background_color: "000000"

            # Generate button label
            Label:

                # Style
                markup: True
                font_name: root.font
                text: "[b]Generate new vless proxy[/b]"
                color: "000000"    

            # Generate button
            Button:

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Generate"
                background_color: "#000000ee"

                # Action
                on_press:
                    root.generate(output)

            # New line - Empty label
            Label:
                text:""

            # New line - Empty label
            Label:
                text:""

            # New line - Empty label
            Label:
                text:""

            # Output box
            TextInput:

                # ID
                id: output

                # Size & Position
                size_hint: (0.4, None)
                height: "100dp"

                # Style
                markup: True
                font_name: root.font
                text: ""
                hint_text: "Output of created proxy..."
                background_color: "#eeeeee22"
            
            # Copy button
            Button:

                # ID
                id: copybutton

                # Size & Position
                size_hint: (0.4, 0.1)

                # Style
                markup: True
                font_name: root.font
                text: "Copy to clipboard"
                background_color: "#000000ee"

                # Action
                on_press:
                    root.copy_output(output)

            # New line - Empty label
            Label:
                text:""

            # Reset label
            Label:

                # Style
                markup: True
                font_name: root.font
                text: "[b][ref=Clear][color=#ff0000]Clear[/color][/ref] the output[/b]"
                color: "000000"

                # Action
                on_ref_press:
                    root.reset_output(output)

        # GitHub button
        ImageButton:
 
            # Size & Position
            size_hint: (0.1, 0.1)
            pos_hint: {"bottom": 1, "center_x": 0.55}
 
            # Style
            source: "Sources/Assets/github96.png"

            # Action
            on_press:
                root.open_github()

        # Telegram button
        ImageButton:
 
            # Size & Position
            size_hint: (0.1, 0.1)
            pos_hint: {"bottom": 1, "center_x": 0.45}
 
            # Style
            source: "Sources/Assets/telegram96.png"

            # Action
            on_press:
                root.open_telegram()

# EOF
